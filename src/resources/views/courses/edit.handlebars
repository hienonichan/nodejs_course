<div>
    <h1>Update Khóa học</h1>
    <form method="POST" action="/courses/{{courseObject._id}}?_method=PUT" >
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" value="{{courseObject.name}}" placeholder="--Nhập Tên--">
        </div>

         <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" value="{{courseObject.description}}" placeholder="--Nhập mô tả khóa học--">
        </div>

         <div class="form-group">
            <label for="description">VideoId</label>
            <input type="text" class="form-control" id="videoid" name="videoid" value="{{courseObject.videoid}}" placeholder="Nhập ID">
        </div>

         <div class="form-group">
            <label for="description">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" value="{{courseObject.level}}" placeholder="Nhập Mức độ">
        </div>

        <button type="submit" id="submit-button">Lưu lại</button>
    </form>
</div>




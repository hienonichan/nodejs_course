<div>
    <h1>Đăng khóa học</h1>
    <form action="store" method="POST">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="--Nhập Tên--">
        </div>

         <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="--Nhập mô tả khóa học--">
        </div>

         <div class="form-group">
            <label for="description">VideoId</label>
            <input type="text" class="form-control" id="videoid" name="videoid" placeholder="Nhập ID">
        </div>

         <div class="form-group">
            <label for="description">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Nhập Mức độ">
        </div>

        <button type="submit" id="submit-button">Đăng khóa học</button>
    </form>
</div>





<div class="courses list">
  {{#each coursesObject}}
   <div class="card" style="width: 18rem;">
    <a href="/courses/{{this.slug}}"><img class="card-img-top" src="{{this.image}}" alt="Card image cap"></a>
  <div class="card-body">
    <a href="/courses/{{this.slug}}"> <h5 class="card-title">{{this.name}}</h5></a>
    <p class="card-text">{{this.description}}</p>
    <a href="#" class="btn btn-primary">Đăng ký học</a>
  </div>
</div>
 {{else}}
            <tr >
                <td>Bạn chưa đăng khóa học nào</td>
                <td><a href="/courses/create">Ấn vào đây để tạo khóa học</a></td>
            </tr>
 {{/each}}
</div>

